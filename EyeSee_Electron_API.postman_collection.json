{
    "info": {
        "_postman_id": "eyesee-electron-api",
        "name": "EyeSee Electron API",
        "description": "API Collection for EyeSee Electron Native App",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.token) {",
                                    "    pm.collectionVariables.set('token', jsonData.token);",
                                    "    console.log('Token saved!');",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"superadmin\",\n    \"password\": \"your_password_here\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/electron-login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "electron-login"
                            ]
                        },
                        "description": "Login to get JWT token. Token will be auto-saved to collection variable."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "CCTV",
            "item": [
                {
                    "name": "Get All Cameras",
                    "request": {
                        "method": "GET",
                        "header": [
